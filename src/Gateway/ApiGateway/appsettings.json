{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "super-secret-key-that-should-be-stored-securely-and-is-long-enough-for-hmac-sha-256",
    "Issuer": "TalentFlows.Identity",
    "Audience": "TalentFlows"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/companies/{**catch-all}"
        }
      },
      "job-route": {
        "ClusterId": "job-cluster",
        "Match": {
          "Path": "/api/jobs/{**catch-all}"
        }
      },
      "candidate-route": {
        "ClusterId": "candidate-cluster",
        "Match": {
          "Path": "/api/candidates/{**catch-all}"
        }
      },
      "application-route": {
        "ClusterId": "application-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/applications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5111"
          }
        }
      },
      "company-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5112"
          }
        }
      },
      "job-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5113"
          }
        }
      },
      "candidate-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5114"
          }
        }
      },
      "application-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5115"
          }
        }
      }
    }
  }
}